# top-most EditorConfig file
root = true

[*]
indent_style = space
indent_size = 4
end_of_line = crlf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = false

[*.{json,jsonc}]
indent_size = 2

[*.md]
trim_trailing_whitespace = false
insert_final_newline = true

[*.ps1]
indent_style = space
indent_size = 2

[*.{yml,yaml}]
indent_size = 2